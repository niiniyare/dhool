{
  "name": "customer",
  "label": "Customer",
  "labelPlural": "Customers",
  "icon": "pi pi-users",
  "module": "crm",
  "api": {
    "baseEndpoint": "/api/v1/customers",
    "endpoints": {
      "list": "/api/v1/customers",
      "get": "/api/v1/customers/{id}",
      "create": "/api/v1/customers",
      "update": "/api/v1/customers/{id}",
      "delete": "/api/v1/customers/{id}",
      "search": "/api/v1/customers/search"
    },
    "pagination": {
      "pageSize": 25,
      "pageSizeOptions": [10, 25, 50, 100]
    }
  },
  "listView": {
    "columns": [
      {
        "field": "id",
        "header": "ID",
        "type": "text",
        "sortable": true,
        "width": "80px"
      },
      {
        "field": "name",
        "header": "Customer Name",
        "type": "text",
        "sortable": true,
        "searchable": true,
        "filter": true,
        "filterType": "text"
      },
      {
        "field": "email",
        "header": "Email",
        "type": "email",
        "sortable": true,
        "searchable": true,
        "filter": true,
        "filterType": "text"
      },
      {
        "field": "phone",
        "header": "Phone",
        "type": "phone",
        "sortable": false
      },
      {
        "field": "type",
        "header": "Type",
        "type": "badge",
        "sortable": true,
        "filter": true,
        "filterType": "select",
        "filterOptions": [
          { "label": "Individual", "value": "individual" },
          { "label": "Company", "value": "company" }
        ]
      },
      {
        "field": "status",
        "header": "Status",
        "type": "badge",
        "sortable": true,
        "filter": true,
        "filterType": "select",
        "filterOptions": [
          { "label": "Active", "value": "active" },
          { "label": "Inactive", "value": "inactive" },
          { "label": "Blocked", "value": "blocked" }
        ]
      },
      {
        "field": "createdAt",
        "header": "Created",
        "type": "date",
        "sortable": true,
        "width": "120px"
      }
    ],
    "filters": [
      {
        "field": "type",
        "type": "select",
        "options": [
          { "value": "individual", "label": "Individual" },
          { "value": "company", "label": "Company" }
        ]
      },
      {
        "field": "status",
        "type": "select",
        "options": [
          { "value": "active", "label": "Active" },
          { "value": "inactive", "label": "Inactive" },
          { "value": "blocked", "label": "Blocked" }
        ]
      },
      {
        "field": "dateRange",
        "type": "dateRange",
        "field_start": "createdAt",
        "field_end": "createdAt"
      }
    ],
    "searchFields": ["name", "email", "phone"],
    "toolbarActions": [
      {
        "id": "create",
        "label": "Add Customer",
        "icon": "pi pi-plus",
        "variant": "primary",
        "action": "create"
      },
      {
        "id": "export",
        "label": "Export",
        "icon": "pi pi-download",
        "variant": "secondary",
        "action": "export"
      },
      {
        "id": "import",
        "label": "Import",
        "icon": "pi pi-upload",
        "variant": "secondary",
        "action": "import"
      }
    ],
    "rowActions": [
      {
        "id": "view",
        "label": "View",
        "icon": "pi pi-eye",
        "action": "view"
      },
      {
        "id": "edit",
        "label": "Edit",
        "icon": "pi pi-pencil",
        "action": "edit"
      },
      {
        "id": "delete",
        "label": "Delete",
        "icon": "pi pi-trash",
        "severity": "danger",
        "action": "delete",
        "confirmation": true
      }
    ],
    "pagination": {
      "defaultPageSize": 25,
      "pageSizeOptions": [10, 25, 50, 100]
    }
  },
  "formView": {
    "sections": [
      {
        "title": "Basic Information",
        "description": "Primary customer details",
        "columns": 2,
        "fields": ["name", "email", "phone", "type", "status"]
      },
      {
        "title": "Contact Details",
        "description": "Additional contact information",
        "columns": 2,
        "fields": ["contact_person", "alternate_phone", "website", "tax_id"]
      },
      {
        "title": "Address Information", 
        "description": "Customer address details",
        "columns": 2,
        "fields": ["address_line1", "address_line2", "city", "state", "postal_code", "country"]
      },
      {
        "title": "Business Settings",
        "description": "Account settings and preferences",
        "columns": 2,
        "fields": ["tags", "notes", "credit_limit", "payment_terms"]
      }
    ],
    "fields": [
      {
        "name": "type",
        "label": "Customer Type",
        "type": "select",
        "required": true,
        "options": [
          { "label": "Individual", "value": "individual" },
          { "label": "Company", "value": "company" }
        ],
        "default": "individual"
      },
      {
        "name": "name",
        "label": "Name",
        "type": "text",
        "required": true,
        "validation": {
          "minLength": 2,
          "maxLength": 100
        },
        "placeholder": "Enter customer name"
      },
      {
        "name": "email",
        "label": "Email",
        "type": "email",
        "required": true,
        "validation": {
          "pattern": "^[^@]+@[^@]+\\.[^@]+$",
          "message": "Please enter a valid email address"
        },
        "placeholder": "customer@example.com"
      },
      {
        "name": "phone",
        "label": "Phone",
        "type": "phone",
        "required": true,
        "validation": {
          "pattern": "^[+]?[0-9\\s-()]+$",
          "minLength": 10,
          "maxLength": 20
        },
        "placeholder": "+1 (555) 123-4567"
      },
      {
        "name": "status",
        "label": "Status",
        "type": "select",
        "required": true,
        "options": [
          { "label": "Active", "value": "active" },
          { "label": "Inactive", "value": "inactive" },
          { "label": "Blocked", "value": "blocked" }
        ],
        "default": "active"
      },
      {
        "name": "contact_person",
        "label": "Contact Person",
        "type": "text",
        "dependencies": {
          "field": "type",
          "value": "company"
        },
        "placeholder": "Primary contact name"
      },
      {
        "name": "alternate_phone",
        "label": "Alternate Phone",
        "type": "phone",
        "validation": {
          "pattern": "^[+]?[0-9\\s-()]+$"
        },
        "placeholder": "+1 (555) 987-6543"
      },
      {
        "name": "website",
        "label": "Website",
        "type": "link",
        "required": false,
        "validation": {
          "format": "url"
        },
        "placeholder": "https://example.com"
      },
      {
        "name": "tax_id",
        "label": "Tax ID",
        "type": "text",
        "dependencies": {
          "field": "type",
          "value": "company"
        },
        "placeholder": "Enter tax identification number"
      },
      {
        "name": "address_line1",
        "label": "Address Line 1",
        "type": "text",
        "placeholder": "Street address"
      },
      {
        "name": "address_line2",
        "label": "Address Line 2",
        "type": "text",
        "placeholder": "Apartment, suite, etc."
      },
      {
        "name": "city",
        "label": "City",
        "type": "text",
        "placeholder": "City name"
      },
      {
        "name": "state",
        "label": "State/Province",
        "type": "text",
        "placeholder": "State or province"
      },
      {
        "name": "postal_code",
        "label": "Postal Code",
        "type": "text",
        "validation": {
          "pattern": "^[A-Za-z0-9\\s-]+$"
        },
        "placeholder": "12345"
      },
      {
        "name": "country",
        "label": "Country",
        "type": "select",
        "options": [
          { "label": "United States", "value": "US" },
          { "label": "Canada", "value": "CA" },
          { "label": "United Kingdom", "value": "GB" },
          { "label": "Australia", "value": "AU" },
          { "label": "India", "value": "IN" }
        ],
        "default": "US"
      },
      {
        "name": "tags",
        "label": "Tags",
        "type": "link",
        "linkType": "tag",
        "multiple": true,
        "placeholder": "Add tags..."
      },
      {
        "name": "notes",
        "label": "Internal Notes",
        "type": "textarea",
        "required": false,
        "placeholder": "Additional notes about this customer...",
        "validation": {
          "maxLength": 1000
        },
        "rows": 4
      },
      {
        "name": "credit_limit",
        "label": "Credit Limit",
        "type": "number",
        "currency": true,
        "access": {
          "subscription": ["professional", "enterprise"]
        },
        "validation": {
          "min": 0,
          "max": 1000000
        },
        "placeholder": "0.00"
      },
      {
        "name": "payment_terms",
        "label": "Payment Terms",
        "type": "select",
        "access": {
          "subscription": ["professional", "enterprise"]
        },
        "options": [
          { "label": "Net 30", "value": "net30" },
          { "label": "Net 60", "value": "net60" },
          { "label": "Due on Receipt", "value": "due_on_receipt" },
          { "label": "Custom", "value": "custom" }
        ],
        "default": "net30"
      }
    ]
  },
  "access": {
    "requiredModule": "crm",
    "permissions": {
      "create": ["admin", "sales_manager", "sales_rep"],
      "read": ["admin", "sales_manager", "sales_rep", "support"],
      "update": ["admin", "sales_manager", "sales_rep"],
      "delete": ["admin", "sales_manager"],
      "export": ["admin", "sales_manager", "sales_rep"],
      "import": ["admin", "sales_manager"]
    },
    "fieldAccess": {
      "credit_limit": {
        "read": ["admin", "sales_manager"],
        "write": ["admin", "sales_manager"]
      },
      "payment_terms": {
        "read": ["admin", "sales_manager", "accounting"],
        "write": ["admin", "sales_manager"]
      },
      "notes": {
        "read": ["admin", "sales_manager", "sales_rep"],
        "write": ["admin", "sales_manager", "sales_rep"]
      },
      "tax_id": {
        "read": ["admin", "sales_manager", "accounting"],
        "write": ["admin", "sales_manager"]
      }
    },
    "dataScope": {
      "admin": "all",
      "sales_manager": "team",
      "sales_rep": "own",
      "support": "all",
      "accounting": "all"
    },
    "conditions": {
      "edit_active_only": {
        "field": "status",
        "operator": "equals",
        "value": "active"
      },
      "delete_inactive_only": {
        "field": "status",
        "operator": "not_equals",
        "value": "active"
      }
    }
  }
}